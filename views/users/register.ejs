<% layout('layout/boilerplate') %>
    <div class="rows">
        <div class="col-6 offset-3">
            <h1>Register</h1>
            <form action="/register" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="user[username]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="user[email]" required>
                    <div class="valid-feedback">
                        Looks gopassword           </div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Passsword</label>
                    <input type="password" class="form-control" id="password" name="user[password]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn-97 btn-success">Register</button>
        </div>
    </div>
    </form>